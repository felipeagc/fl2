using import "../c.fl";

Alias :: i32;
Size :: 123;

main :: proc () {
  {
    arr: [8]i32;
  }

  {
    arr: [Size]i32;
  }

  {
    arr: [Size]Alias;
  }
  
  {
    ARR_SIZE :: 123;
    array: [ARR_SIZE][12]i32;
    array[0][0] = 123;
    array[1][0] = 321;

    index := 8;

    printf(c"%d\n", array[0][0]);
    printf(c"%d\n", array[1][0]);
    printf(c"%d\n", array[index][0]);
  }

  {
    a: [8]i32 = [8]i32{
      1, 2, 3, 4, 5, 6, 7, 8
    };
    b: [8]i32 = a;
    printf(c"%d\n", b[4]);
  }

  {
    s: i32: 123;
    a := [2][3]i32 {
      [3]i32{1, 2, 3},
      [3]i32{4, 5, 6}
    };

    printf(c"%d\n", a[1][2]);
  }

  // Inferred size
  {
    a := [][]i32 {
      []i32{1, 2, 3},
      []i32{4, 5, 6}
    };

    printf(c"%d\n", a[1][2]);
  }

  {
    a := []i32 { 1, 2, 3 };
  }
